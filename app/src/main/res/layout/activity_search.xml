<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yikezhong.ui.activity.search.SearchActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="#05a9f4"
        android:id="@+id/search_rl"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/search_menu"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/raw_1500023215"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/search_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="搜索好友"
            android:textColor="#fff"
            android:textSize="25dp" />,
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/search_search_rl"
        android:layout_below="@id/search_rl">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/search_name"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/search_search"
            android:text="搜索"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/search_rv"
        android:layout_below="@id/search_search_rl"></android.support.v7.widget.RecyclerView>
</RelativeLayout>
