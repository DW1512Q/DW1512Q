<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/timg"
    tools:context="com.example.yikezhong.ui.activity.OtherActivity">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/other_back"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/back_white"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:src="@drawable/login"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/other_rl"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/other_tv"
            android:text="其他登录方式"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/other_QQ"
        android:src="@drawable/qqq"
        android:layout_marginBottom="20dp"
        android:layout_above="@id/other_rl"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/other_WinXin"
        android:src="@drawable/weixin"
        android:layout_marginBottom="5dp"
        android:layout_above="@id/other_QQ"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
