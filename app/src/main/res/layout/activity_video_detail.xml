<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yikezhong.ui.activity.VideoDetail.VideoDetailActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#E4E4E4"
        android:id="@+id/rl">
        <ImageView
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_centerVertical="true"
            android:id="@+id/video_detail_back"
            android:src="@drawable/raw_1500019926"/>
        <ImageView
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_centerVertical="true"
            android:id="@+id/iv2"
            android:layout_toRightOf="@id/video_detail_back"
            android:src="@drawable/raw_1499933216"/>
        <ImageView
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_centerVertical="true"
            android:id="@+id/iv3"
            android:layout_toRightOf="@id/iv2"
            android:src="@drawable/raw_1499933217"/>
        <ImageView
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_centerVertical="true"
            android:id="@+id/iv4"
            android:layout_toRightOf="@id/iv3"
            android:src="@drawable/raw_1499995160"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/main_menu"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/raw_1500033586"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <cn.jzvd.JZVideoPlayerStandard
        android:id="@+id/videoplayer"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/rl"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tittle"
        android:layout_below="@id/videoplayer"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:text="标题"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:layout_below="@id/tittle"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="12sp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/time">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/raw_1500033586"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</RelativeLayout>
