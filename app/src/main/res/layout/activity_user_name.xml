<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/backgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:background="?attr/mainBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">

            <RelativeLayout
                android:id="@+id/top"
                android:layout_height="250dp"
                android:layout_width="match_parent"
                android:background="@drawable/raw1499917357">

                <ImageView
                    android:id="@+id/back"
                    android:src="@drawable/back_white"
                    android:layout_alignParentLeft="true"
                    android:layout_width="@dimen/size_35"
                    android:layout_height="@dimen/size_35"
                    android:layout_marginTop="@dimen/size_16"
                    android:layout_marginLeft="@dimen/size_15"/>

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/size_16"
                    android:text="" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/middel"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/top">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/circleImageView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/touxiang" />

                <TextView
                    android:id="@+id/shuzi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="1258451 粉丝   |   17 关注" />

                <Button
                    android:text="编辑个人资料"
                    android:id="@+id/updata_name"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginStart="23dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bottom_styless"
                    android:layout_below="@+id/circleImageView"
                    android:layout_toEndOf="@+id/circleImageView"
                    android:layout_toRightOf="@+id/circleImageView"
                    android:textColor="@android:color/holo_blue_dark" />
            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_below="@+id/middel"
                android:background="#b7b7b7" />

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>
